# Cambia estos valores según tu entorno local.
# Copia este archivo a `.env` y ajusta los parámetros necesarios.

# Ruta de la base de datos SQLite utilizada por el asistente.
CAMBIO_DB_PATH=./data/cambio_dollar.sqlite

# Zona horaria utilizada para reportes y consenso.
CAMBIO_TIMEZONE=America/Santo_Domingo

# Habilita el scheduler automático de capturas.
CAMBIO_SCHEDULER_ENABLED=false
CAMBIO_SCHEDULER_INTERVAL_SECONDS=300

# Ajustes financieros generales.
CAMBIO_MIN_PROFIT_MARGIN=0.50
CAMBIO_TRANSACTION_COST=0.15

# Proveedor Banco Central RD API v2 (requiere suscripción en API Gateway oficial).
CAMBIO_PROVIDERS__2__ENABLED=false
BCRD_API_KEY=

# Proveedor Banco Popular (requiere credenciales válidas para habilitarse).
CAMBIO_PROVIDERS__3__ENABLED=false
BPD_CLIENT_ID=
BPD_CLIENT_SECRET=

# Proveedor de remesas (requiere habilitación manual si se cuenta con endpoint compatible).
CAMBIO_PROVIDERS__5__ENABLED=false

# Ejemplo de endpoint alternativo.
# CAMBIO_SECONDARY_ENDPOINTS__0=https://api.exchangerate.host/latest?base=USD&symbols=DOP

# Ajuste de tolerancias para detección de outliers y discrepancias.
CAMBIO_VALIDATION_TOLERANCE=0.50
CAMBIO_DIVERGENCE_THRESHOLD=1.00
